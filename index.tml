<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Card√°pio - Esfiharia Delivery</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background: #f5f5f5; }
    h1 { text-align: center; }
    .categoria { margin-bottom: 20px; }
    .produto { background: #fff; border-radius: 8px; padding: 10px; margin: 8px 0; box-shadow: 0 2px 5px rgba(0,0,0,0.05); }
  </style>
</head>
<body>
  <h1 id="tituloEsfiharia">Esfiharia</h1>
  <img id="imgHeader" src="" alt="Header" style="max-width: 100%; margin: 10px 0;" />
  <div id="conteudoCardapio"></div>
  <button id="botaoPedido">Meu Pedido</button>

  <script>
    const dados = JSON.parse(localStorage.getItem('cardapio')) || {};
    document.getElementById('tituloEsfiharia').textContent = dados?.header?.nome || "Esfiharia";
    document.getElementById('imgHeader').src = dados?.header?.imagem || "";
    document.getElementById('botaoPedido').textContent = dados?.textoBotao || "Meu Pedido";

    const categorias = dados?.categorias || [];
    const produtos = dados?.produtos || [];

    const conteudo = document.getElementById('conteudoCardapio');
    categorias.forEach(cat => {
      const divCat = document.createElement('div');
      divCat.className = 'categoria';
      const titulo = document.createElement('h2');
      titulo.textContent = cat;
      divCat.appendChild(titulo);

      produtos.filter(p => p.categoria === cat).forEach(p => {
        const divProd = document.createElement('div');
        divProd.className = 'produto';
        divProd.textContent = `${p.nome} - R$ ${parseFloat(p.preco).toFixed(2)}`;
        divCat.appendChild(divProd);
      });

      conteudo.appendChild(divCat);
    });
  </script>
</body>
</html>
